@"
node {
    try {
        stage('Checkout') {
            git branch: 'main', url: 'https://github.com/<your-username>/my-node-app.git'
        }
        stage('Install Dependencies') {
            sh 'npm install'
        }
        stage('Run Tests') {
            sh 'npm test'
        }
        echo 'Build success!'
    } catch(err) {
        echo "Build failed: ${err}"
        currentBuild.result = 'FAILURE'
    }
}
"@ | Out-File -Encoding UTF8 Jenkinsfile-scripted
